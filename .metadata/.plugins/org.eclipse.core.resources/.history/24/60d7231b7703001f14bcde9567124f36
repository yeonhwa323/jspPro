<div>
  <xmp class="code">
     c:forEach
     	ㄴ items	: 반복 배열, 대상객체(Map, 컬렉션)         
     	ㄴ var      : 변수명         
     	ㄴ begin    : 반복 시작값   
     	ㄴ end      : 반복 끝값          
     	ㄴ step     : 반복 증가치           
     	ㄴ varStatus     X  
  </xmp> 
  
  <!-- 1+2+3+.....+9+10=55 / 공백없애려면 한줄에 한번에 쓰기-->
  <c:forEach begin="1" end="10" step="1" var="i" >
	${i}+
  </c:forEach>


  <hr>
  
  <!-- int sum = 0; -->
  <c:set var="sum" value="0">
	  <c:forEach begin="1" end="10" step="1" var="i" >
	  <%-- 
	  <c:if test="${ i eq 10 }">${ i }</c:if>
	  <c:if test="${ i ne 10 }">${ i }+</c:if> 
	  --%>
	  <!-- EL 삼항연산자 -->
	  ${ i += (i eq 10?"":"+" }
	    <!-- sum += i; -->
	   <c:set var="sum" value="${ sum + i }"></c:set>  
	  </c:forEach>	  
	  =${sum}
	  </c:set>
	  
	  <hr>
	  <c:forEach begin="5" end="13" step="2" var="i"
	  	varStatus="status">
	  	${i} - ${status.index } - ${status.count }
	  	- ${status.first } - ${status.last }<br>
	  </c:forEach>
  
  
  
  
</div>

