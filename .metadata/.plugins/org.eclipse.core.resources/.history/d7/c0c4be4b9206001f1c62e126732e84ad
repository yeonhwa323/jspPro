		<multipart-config>
			<location>C:\Tools\apache-tomcat-9.0.88\temp</location>
			<max-file-size>-1</max-file-size> <!-- byte -->
			<max-request-size></max-request-size>
		</multipart-config>
	</servlet>
	<servlet-mapping>
		<servlet-name>uploadServlet</servlet-name>
		<url-pattern>/days09/upload</url-pattern>
	</servlet-mapping>
		
